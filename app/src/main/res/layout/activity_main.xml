<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary">


        <com.nex3z.notificationbadge.NotificationBadge
                android:id="@+id/badge"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/order_icon"
                app:nbMaxTextLength="2"
                android:layout_alignParentBottom="true" android:layout_marginBottom="8dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="11dp" android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movies_list"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grayCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>